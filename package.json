{
  "name": "karere-backend",
  "version": "1.0.0",
  "description": "WhatsApp backend for Karere using Baileys",
  "main": "src/backend.js",
  "type": "module",
  "bin": "src/backend.js",
  "pkg": {
    "scripts": [
      "src/**/*.js"
    ],
    "assets": [],
    "targets": [
      "node18-linux-x64",
      "node18-linux-arm64",
      "node18-win-x64",
      "node18-macos-x64",
      "node18-macos-arm64"
    ],
    "outputPath": "dist"
  },
  "scripts": {
    "build": "pkg . --out-path dist",
    "build:linux": "pkg . --targets node18-linux-x64,node18-linux-arm64 --out-path dist",
    "build:windows": "pkg . --targets node18-win-x64 --out-path dist",
    "build:macos": "pkg . --targets node18-macos-x64,node18-macos-arm64 --out-path dist",
    "start": "node src/backend.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "whatsapp",
    "baileys",
    "backend",
    "karere"
  ],
  "author": "Karere Team",
  "license": "MIT",
  "dependencies": {
    "@whiskeysockets/baileys": "^6.7.18",
    "pino": "^9.7.0",
    "qrcode": "^1.5.4",
    "sqlite3": "^5.1.6",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  }
}
